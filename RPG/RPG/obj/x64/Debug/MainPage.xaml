        <TextBox x:ConnectionId='5' x:Name="txb_log" HorizontalAlignment="Left" Margin="0,0,0,0" Text="TextBox" VerticalAlignment="Top" RenderTransformOrigin="-1.171,-0.719" Canvas.Left="90" Canvas.Top="202"/>
        <TextBox x:ConnectionId='6' x:Name="EventCount" Canvas.Left="92" Canvas.Top="283" Text="TextBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

    </Canvas>

</Page>

